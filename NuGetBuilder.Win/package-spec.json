{
  "$schema": "http://json-schema.org/draft-04/schema",

  "title": "PackageDefinition",

  "type": "object",

  "properties": {
    "id": {
      "type": "string",
      "description": "NuGet package id."
    },
    "summary": {
      "type": "string",
      "description": "NuGet package summary (shown in VS packages browser window)."
    },
    "description": {
      "type": "string",
      "description": "NuGet package description."
    },
    "authors": {
      "type": "array",
      "description": "An array of package authors.",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    },
    "owners": {
      "type": "array",
      "description": "An array of package owners.",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    },
    "dependencies": {
      "type": "array",
      "description": "Package dependencies.",
      "items": {
        "title": "packageDependency",
        "type": "object",
        "properties": {
          "depId": {
            "type": "string"
          },
          "version": {
            "type": "string"
          }
        }
      }
    },
    "git": {
      "type": "string",
      "description": "Git repository"
    },
    "sources": {
      "type": "array",
      "description": "Package sources",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    },
    "destinations": {
      "type": "array",
      "description": "Package destinations",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    }
  }
}
